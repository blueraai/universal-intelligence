FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY ui-docs/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY ui-docs/ .

# Expose the port for the dev server
EXPOSE 5173

# Start the dev server with host option to make it accessible outside container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
